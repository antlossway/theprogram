{% macro hero(logoPath,logoAlt, title, text) %}
<div class="grid place-content-center">
    <figure class="flex flex-col items-center gap-6 mb-4">
        <img src={{logoPath}} alt={{logoAlt}}
        width="200" height="200">
        </figure>
        {% if title !== undefined %}
    <h1 class="h1 text-center mb-2">{{title}}</h1>
    {% endif %}
    <p class="text-center text-xl">{{text}}</p>
</div>
{% endmacro %}